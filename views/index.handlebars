    <h1>Eat Da Burger!</h1>

<img src="assets/images/hamburger.png" height="200px" width="200px">
<div class="row">
    <div class="col-6">
        <div id="new-burger">
            <h3>New Burgers</h3>
            <ul>
                {{#each newBurgers as |burger|}}
                    {{#unless devoured}}
                    {{>burgers/burger-block devoured=true}}
                    {{/unless}}
                {{/each}}
            </ul>    
        </div>
    </div>
</div>

<div class="col-6">
    <div id="devoured-burger">
        <h3>All Gone</h3>
        <ul>
            {{#each newBurgers}}
                {{#if devoured}}
                    {{> burgers/burger-block devoured=false}}
                {{/if}}
            {{/each}}
        </ul>
    </div>
</div>

<h3>What kind of burger would you like to eat?</h3>
<form class="create-form">
  <div class="form-group">
    <label for="burg">Burger Name:</label>
    <input type="text" id="burg" name="name">
  </div>
    <p>Type in the name of any kind of burger that you'd like to eat</p>
  <button type="submit">Create Burger</button>
</form>
